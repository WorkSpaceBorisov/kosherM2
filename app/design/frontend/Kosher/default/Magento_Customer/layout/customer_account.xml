<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sidebar.additional" remove="true" />
        <referenceBlock name="customer-account-navigation-delimiter-1" remove="true" />
        <referenceBlock name="customer-account-navigation-delimiter-2" remove="true" />
        <referenceBlock name="customer-account-navigation-account-link" remove="true" />

        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\Link" name="customer_info_link" template="Magento_Customer::account/customer_info_link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Account</argument>
                    <argument name="path" xsi:type="string">customer/account</argument>
                    <argument name="sortOrder" xsi:type="string">2150</argument>
                    <argument name="liParams" xsi:type="array">
                        <item name="class" xsi:type="string">custom-account-link</item>
                    </argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-logout-link">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/logout</argument>
                    <argument name="label" xsi:type="string">Logout</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">logout</item>
                    </argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\Dashboard\Info" name="customer.account.dashboard.info" template="Magento_Customer::account/dashboard/info.phtml"/>
        </referenceBlock>

        <referenceBlock name="customer-account-navigation-address-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">address</item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-account-edit-link">
            <arguments>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">account-info</item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

<?php else: ?>
    <nav class="navigation" data-action="navigation">
<?php endif; ?>
    <ul data-init="navigation">
        <?= /* @noEscape */ $_menuHtml?>
        <?= $block->getChildHtml() ?>
    </ul>
</nav>
